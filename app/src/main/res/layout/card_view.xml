<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#FFE2C1"
    card_view:cardCornerRadius="25dp"
    android:elevation="5dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:padding="16dp">


        <ImageView
            android:id="@+id/edit"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/tvTopic"
            android:layout_margin="10dp"
            android:layout_marginStart="180dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/edit"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.626"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTopic"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:layout_below="@+id/tvTopic"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/remove"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTopic"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="57dp"
            android:layout_height="38dp"
            android:layout_below="@+id/tvTopic"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/add"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.813"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTopic"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="233dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/edit"
            android:layout_toEndOf="@+id/edit"
            android:paddingLeft="20dp"
            android:text="Notes"
            android:textSize="40sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="47dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>